{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "imports/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    ".meteor"
  ]
}